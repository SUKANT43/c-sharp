<UserControl x:Class="WpfApp1.ToDo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Height="450" Width="800">
    <StackPanel Background="Gray">
        <Label BorderBrush="Black" BorderThickness="3" Margin="20,20,20,20"  Background="LightGray" HorizontalContentAlignment="Center" VerticalContentAlignment="Top">
                <TextBlock FontSize="32" FontWeight="Bold" >To-Do List</TextBlock>
        </Label>
        <Label Background="LightGray" Height="353">
            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="InputValue" Height="65" Width="300" FontSize="32" HorizontalAlignment="Left" Margin="20,0,0,0" BorderThickness="3" BorderBrush="Black" />
                <Button BorderThickness="3" BorderBrush="Black" Width="100" Height="40" FontWeight="Bold" FontSize="20" Background="Gray" Margin="10,0,0,0" Click="Button_Click">Add</Button>
            </StackPanel>
        </Label>

    </StackPanel>
   
</UserControl>
